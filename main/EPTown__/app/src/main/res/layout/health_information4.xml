<?xml version="1.0" encoding="utf-8"?>

<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <!-- 나가기 버튼 -->
    <ImageView
        android:id="@+id/btnLoginBack"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginTop="20dp"
        android:src="@drawable/ic_left_arrow"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <!-- 반려동물 프로필 관리 -->
    <TextView
        android:id="@+id/profile_administration"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="반려동물 프로필 관리"
        android:textSize="16sp"
        android:textStyle="bold"
        android:layout_marginTop="20dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>

    <!-- 반려동물 프로필 관리 아래 수평선 -->
    <View
        android:id="@+id/Horizon"
        android:layout_width="wrap_content"
        android:layout_height="5dp"
        android:layout_marginTop="56dp"
        android:background="#F5F6F7"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="MissingConstraints" />

    <!-- 플목이 버튼 -->
    <ImageView
        android:id="@+id/choiceButtonOne"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_profile_administration_button1"
        android:layout_marginTop="81dp"
        android:layout_marginStart="21dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"/>

    <!-- 추가하기 버튼 -->
    <ImageView
        android:id="@+id/choiceButtonTwo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_profile_administration_button2"
        android:layout_marginTop="81dp"
        android:layout_marginStart="72dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"/>

    <!-- 선택지 아래줄 -->
    <View
        android:id="@+id/choiceBar"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginTop="116dp"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:background="#D2D5D6"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="MissingConstraints" />

    <!-- 이름 -->
    <TextView
        android:id="@+id/name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="이름"
        android:textSize="13sp"
        android:layout_marginStart="20dp"
        android:layout_marginTop="150dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>

    <!-- 입력창 -->
    <ImageView
        android:id="@+id/enterBoxOne"
        android:layout_width="254dp"
        android:layout_height="34dp"
        android:src="@drawable/ic_profile_administration_box"
        android:layout_marginTop="143dp"
        android:layout_marginStart="86dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>

    <!-- 반려동물 이름 -->
    <TextView
        android:id="@+id/nameEnter"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="플목이"
        android:textColor="#B8BFC2"
        android:textSize="12sp"
        android:layout_marginStart="100dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@id/enterBoxOne"
        app:layout_constraintBottom_toBottomOf="@id/enterBoxOne" />

    <!-- 나이 -->
    <TextView
        android:id="@+id/age"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="나이"
        android:textSize="13sp"
        android:layout_marginStart="20dp"
        android:layout_marginTop="203dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>

    <!-- 입력창 -->
    <ImageView
        android:id="@+id/enterBoxTwo"
        android:layout_width="254dp"
        android:layout_height="34dp"
        android:src="@drawable/ic_profile_administration_box"
        android:layout_marginTop="196dp"
        android:layout_marginStart="86dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>

    <!-- 반려동물 나이 -->
    <TextView
        android:id="@+id/ageEnter"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="3살"
        android:textSize="12sp"
        android:layout_marginStart="100dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@id/enterBoxTwo"
        app:layout_constraintBottom_toBottomOf="@id/enterBoxTwo" />

    <!-- 체중 -->
    <TextView
        android:id="@+id/weight"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="체중"
        android:textSize="13sp"
        android:layout_marginStart="20dp"
        android:layout_marginTop="256dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>

    <!-- 입력창 -->
    <ImageView
        android:id="@+id/enterBoxThree"
        android:layout_width="254dp"
        android:layout_height="34dp"
        android:src="@drawable/ic_profile_administration_box"
        android:layout_marginTop="249dp"
        android:layout_marginStart="86dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>

    <!-- 반려동물 체중 -->
    <TextView
        android:id="@+id/weightEnter"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="3kg"
        android:textSize="12sp"
        android:layout_marginStart="100dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@id/enterBoxThree"
        app:layout_constraintBottom_toBottomOf="@id/enterBoxThree" />

    <!-- 키 -->
    <TextView
        android:id="@+id/height"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="키"
        android:textSize="13sp"
        android:layout_marginStart="20dp"
        android:layout_marginTop="309dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>

    <!-- 입력창 -->
    <ImageView
        android:id="@+id/enterBoxFour"
        android:layout_width="254dp"
        android:layout_height="34dp"
        android:src="@drawable/ic_profile_administration_box"
        android:layout_marginTop="302dp"
        android:layout_marginStart="86dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>

    <!-- 반려동물 키 -->
    <TextView
        android:id="@+id/heightEnter"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="26cm"
        android:textSize="12sp"
        android:layout_marginStart="100dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@id/enterBoxFour"
        app:layout_constraintBottom_toBottomOf="@id/enterBoxFour" />

    <!-- 정기검진 -->
    <TextView
        android:id="@+id/regularCheckUp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="정기검진"
        android:textSize="13sp"
        android:layout_marginStart="20dp"
        android:layout_marginTop="362dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>

    <!-- 입력창 -->
    <ImageView
        android:id="@+id/enterBoxFive"
        android:layout_width="254dp"
        android:layout_height="34dp"
        android:src="@drawable/ic_profile_administration_box"
        android:layout_marginTop="355dp"
        android:layout_marginStart="86dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>

    <!-- 정기검진 -->
    <TextView
        android:id="@+id/regularCheckUpEnter"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="2023년 7월 6일"
        android:textSize="12sp"
        android:layout_marginStart="100dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@id/enterBoxFive"
        app:layout_constraintBottom_toBottomOf="@id/enterBoxFive" />

    <!-- 건강상태 -->
    <TextView
        android:id="@+id/healthCondition"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="건강상태"
        android:textSize="13sp"
        android:layout_marginStart="20dp"
        android:layout_marginTop="415dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>

    <!-- 입력창 -->
    <ImageView
        android:id="@+id/enterBoxSix"
        android:layout_width="254dp"
        android:layout_height="34dp"
        android:src="@drawable/ic_profile_administration_box"
        android:layout_marginTop="408dp"
        android:layout_marginStart="86dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>

    <!-- 건강상태 -->
    <TextView
        android:id="@+id/healthConditionEnter"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="이상없음"
        android:textSize="12sp"
        android:layout_marginStart="100dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@id/enterBoxSix"
        app:layout_constraintBottom_toBottomOf="@id/enterBoxSix" />

    <!-- 반려동물 건강정보 수정하고나서 뜨는 창 -->
    <ImageView
        android:id="@+id/registerBox"
        android:layout_width="230dp"
        android:layout_height="30dp"
        android:src="@drawable/ic_community_register_box"
        android:layout_marginBottom="87dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <!-- 반려동물의 건강정보가 수정되었습니다 -->
    <TextView
        android:id="@+id/register"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="반려동물의 건강정보가 수정되었습니다"
        android:textSize="10dp"
        android:textColor="#FFFFFF"
        app:layout_constraintEnd_toEndOf="@id/registerBox"
        app:layout_constraintStart_toStartOf="@id/registerBox"
        app:layout_constraintTop_toTopOf="@id/registerBox"
        app:layout_constraintBottom_toBottomOf="@id/registerBox"/>

    <!-- 취소/등록 하얀 사각형 배경 -->
    <ImageView
        android:id="@+id/buyBar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/bar_buy_fix"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <!-- 수정하기 버튼 -->
    <ImageView
        android:id="@+id/buyFixButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_modify2"
        android:layout_marginBottom="10dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>


</androidx.constraintlayout.widget.ConstraintLayout>
