<?xml version="1.0" encoding="utf-8"?>

<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <!-- 문의 -->
    <TextView
        android:id="@+id/inquire"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:text="문의"
        android:textSize="16sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <!-- 뒤로가기 버튼 -->
    <ImageView
        android:id="@+id/btnCategoryFeed1Back"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginTop="23dp"
        android:src="@drawable/ic_arrow"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <!-- 내 문의 내역 -->
    <TextView
        android:id="@+id/writtenReview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="63dp"
        android:layout_marginTop="75dp"
        android:text="내 문의 내역"
        android:textSize="14sp"
        android:textStyle="bold"
        android:textColor="#F59701"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0" />

    <!-- 문의하기 -->
    <TextView
        android:id="@+id/writeReview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="75dp"
        android:layout_marginEnd="75dp"
        android:text="문의하기"
        android:textSize="14sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0" />

    <!-- 작성한 리뷰 아래 밑줄 -->
    <View
        android:id="@+id/shortHorizon"
        android:layout_width="0dp"
        android:layout_height="2dp"
        android:layout_marginTop="105dp"
        android:background="#F59701"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintWidth_percent="0.5"
        tools:ignore="MissingConstraints" />

    <!-- 작성한 리뷰, 리뷰 쓰기 아래 통 밑줄 -->
    <View
        android:id="@+id/firstHorizon"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginTop="105dp"
        android:background="#E7E7E7"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="MissingConstraints" />

    <!-- 첫 번째 문의 -->
    <!-- 서비스 문의 -->
    <TextView
        android:id="@+id/inquiryWriterOne"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="서비스 문의"
        android:textColor="@color/black"
        android:textSize="12sp"
        android:layout_marginStart="20dp"
        android:layout_marginTop="150dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:includeFontPadding="false" />

    <!-- 문의 날짜 -->
    <TextView
        android:id="@+id/inquiryCreatedOne"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="|   2024.09.01"
        android:textColor="#A1A9AD"
        android:textSize="12sp"
        android:layout_marginStart="87dp"
        android:layout_marginTop="152dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:includeFontPadding="false" />

    <!-- 답변 상태 -->
    <TextView
        android:id="@+id/condition"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="미답변"
        android:textColor="#585858"
        android:textSize="10sp"
        android:layout_marginEnd="20dp"
        android:layout_marginTop="150dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:includeFontPadding="false" />

    <!-- 문의 제목 -->
    <TextView
        android:id="@+id/inquiryTitleOne"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="메인화면에서 배너가 안 보여요"
        android:textColor="@color/black"
        android:textSize="12sp"
        android:layout_marginStart="20dp"
        android:layout_marginTop="10dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/inquiryWriterOne"
        android:includeFontPadding="false" />

    <!-- 오른쪽 더보기 닫기 아이콘 -->
    <ImageView
        android:id="@+id/inquirySeeMoreIconOne"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="20dp"
        android:layout_marginTop="15dp"
        android:src="@drawable/ic_inquiry_top_arrow"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/inquiryCreatedOne" />

    <!-- 문의 더보기 배경 사각형 -->
    <ImageView
        android:id="@+id/inquirySeeMoreBarOne"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginTop="10dp"
        android:src="@drawable/bar_inquiry_see_more"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/inquiryTitleOne" />

    <!-- 문의 텍스트 -->
    <TextView
        android:id="@+id/inquirySeeMoreTextOne"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="어플 들어오면 메인화면에서 배너가 안 보여요.."
        android:textSize="11sp"
        android:maxLines="4"
        android:ellipsize="end"
        android:textColor="@color/black"
        android:layout_marginStart="15dp"
        android:layout_marginTop="10dp"
        app:layout_constraintStart_toStartOf="@id/inquirySeeMoreBarOne"
        app:layout_constraintTop_toTopOf="@id/inquirySeeMoreBarOne" />

    <!-- 문의 구분바 -->
    <ImageView
        android:id="@+id/itemDetailDeliveryDivideBarOne"
        android:layout_width="370dp"
        android:layout_height="wrap_content"
        android:src="@drawable/bar_item_detail_delivery_divide"
        android:layout_marginTop="25dp"
        android:layout_marginStart="20dp"
        app:layout_constraintTop_toBottomOf="@id/inquirySeeMoreBarOne"
        app:layout_constraintStart_toStartOf="parent" />

    <!-- 두 번째 문의 -->
    <!-- 배송 문의 -->
    <TextView
        android:id="@+id/inquiryWriterTwo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="배송 문의"
        android:textColor="@color/black"
        android:textSize="12sp"
        android:layout_marginStart="20dp"
        android:layout_marginTop="20dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/itemDetailDeliveryDivideBarOne"
        android:includeFontPadding="false" />

    <!-- 문의 날짜 -->
    <TextView
        android:id="@+id/inquiryCreatedTwo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="|   2024.09.01"
        android:textColor="#A1A9AD"
        android:textSize="12sp"
        android:layout_marginStart="77dp"
        android:layout_marginTop="22dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/itemDetailDeliveryDivideBarOne"
        android:includeFontPadding="false" />

    <!-- 답변 상태 -->
    <TextView
        android:id="@+id/conditionTwo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="답변 완료"
        android:textColor="#585858"
        android:textSize="10sp"
        android:layout_marginEnd="20dp"
        android:layout_marginTop="20dp"
        app:layout_constraintTop_toBottomOf="@id/itemDetailDeliveryDivideBarOne"
        app:layout_constraintEnd_toEndOf="parent"
        android:includeFontPadding="false" />

    <!-- 문의 제목 -->
    <TextView
        android:id="@+id/inquiryTitleTwo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="오늘 주문했는데 언제 배송 시작하나요?"
        android:textColor="@color/black"
        android:textSize="12sp"
        android:layout_marginStart="20dp"
        android:layout_marginTop="10dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/inquiryWriterTwo"
        android:includeFontPadding="false" />

    <!-- 오른쪽 더보기 열기 아이콘 -->
    <ImageView
        android:id="@+id/inquirySeeMoreIconTwo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="20dp"
        android:layout_marginTop="15dp"
        android:src="@drawable/ic_inquiry_under_arrow"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/inquiryCreatedTwo" />

    <!-- 문의 구분바 -->
    <ImageView
        android:id="@+id/itemDetailDeliveryDivideBarTwo"
        android:layout_width="370dp"
        android:layout_height="wrap_content"
        android:src="@drawable/bar_item_detail_delivery_divide"
        android:layout_marginTop="25dp"
        android:layout_marginStart="20dp"
        app:layout_constraintTop_toBottomOf="@id/inquiryTitleTwo"
        app:layout_constraintStart_toStartOf="parent" />

    <!-- 세 번째 문의 -->
    <!-- 배송 문의 -->
    <TextView
        android:id="@+id/inquiryWriterThree"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="배송 문의"
        android:textColor="@color/black"
        android:textSize="12sp"
        android:layout_marginStart="20dp"
        android:layout_marginTop="20dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/itemDetailDeliveryDivideBarTwo"
        android:includeFontPadding="false" />

    <!-- 문의 날짜 -->
    <TextView
        android:id="@+id/inquiryCreatedThree"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="|   2024.09.01"
        android:textColor="#A1A9AD"
        android:textSize="12sp"
        android:layout_marginStart="77dp"
        android:layout_marginTop="22dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/itemDetailDeliveryDivideBarTwo"
        android:includeFontPadding="false" />

    <!-- 답변 상태 -->
    <TextView
        android:id="@+id/conditionThree"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="답변 완료"
        android:textColor="#585858"
        android:textSize="10sp"
        android:layout_marginEnd="20dp"
        android:layout_marginTop="20dp"
        app:layout_constraintTop_toBottomOf="@id/itemDetailDeliveryDivideBarTwo"
        app:layout_constraintEnd_toEndOf="parent"
        android:includeFontPadding="false" />

    <!-- 문의 제목 -->
    <TextView
        android:id="@+id/inquiryTitleThree"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="오늘 주문했는데 언제 배송 시작하나요?"
        android:textColor="@color/black"
        android:textSize="12sp"
        android:layout_marginStart="20dp"
        android:layout_marginTop="10dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/inquiryWriterThree"
        android:includeFontPadding="false" />

    <!-- 오른쪽 더보기 열기 아이콘 -->
    <ImageView
        android:id="@+id/inquirySeeMoreIconThree"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="20dp"
        android:layout_marginTop="15dp"
        android:src="@drawable/ic_inquiry_under_arrow"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/inquiryCreatedThree" />

    <!-- 문의 구분바 -->
    <ImageView
        android:id="@+id/itemDetailDeliveryDivideBarThree"
        android:layout_width="370dp"
        android:layout_height="wrap_content"
        android:src="@drawable/bar_item_detail_delivery_divide"
        android:layout_marginTop="25dp"
        android:layout_marginStart="20dp"
        app:layout_constraintTop_toBottomOf="@id/inquiryTitleThree"
        app:layout_constraintStart_toStartOf="parent" />




</androidx.constraintlayout.widget.ConstraintLayout>