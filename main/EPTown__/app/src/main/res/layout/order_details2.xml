<?xml version="1.0" encoding="utf-8"?>

<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <!-- 주문 내역 -->
    <TextView
        android:id="@+id/review"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:text="주문 내역"
        android:textSize="16sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <!-- 뒤로가기 버튼 -->
    <ImageView
        android:id="@+id/btnCategoryFeed1Back"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginTop="23dp"
        android:src="@drawable/ic_arrow"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <!-- 주문 내역 아래수평선 -->
    <View
        android:id="@+id/firstHorizon"
        android:layout_width="wrap_content"
        android:layout_height="5dp"
        android:layout_marginTop="56dp"
        android:background="#F5F6F7"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="MissingConstraints" />

    <!-- 주문번호 -->
    <TextView
        android:id="@+id/date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="86dp"
        android:layout_marginStart="20dp"
        android:text="주문번호 127398149323"
        android:textSize="14sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <!-- 주문 번호 아래 바 -->
    <ImageView
        android:id="@+id/secondHorizon"
        android:layout_width="370dp"
        android:layout_height="wrap_content"
        android:src="@drawable/bar_item_detail_delivery_divide"
        android:layout_marginTop="118dp"
        android:layout_marginStart="20dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <!-- 상품 -->
    <ImageView
        android:id="@+id/catImageOne"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginTop="139dp"
        android:src="@drawable/image_cat"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <!-- 상품 이름-->
    <TextView
        android:id="@+id/productOneName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="90dp"
        android:layout_marginTop="150dp"
        android:text="이나바 캣 챠오 츄르 참치 14g*40p"
        android:textSize="12sp"
        app:layout_constraintStart_toStartOf="@id/catImageOne"
        app:layout_constraintTop_toTopOf="parent" />

    <!-- 상품 가격 -->
    <TextView
        android:id="@+id/productOnePrice"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="90dp"
        android:layout_marginTop="170dp"
        android:text="1개 (14,400원)"
        android:textColor="#C9C9C9"
        android:textSize="12sp"
        app:layout_constraintStart_toStartOf="@id/catImageOne"
        app:layout_constraintTop_toTopOf="parent" />

    <!-- 할인 -->
    <TextView
        android:id="@+id/sale"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="90dp"
        android:layout_marginTop="188dp"
        android:text="20%"
        android:textColor="#F10000"
        android:textSize="12sp"
        app:layout_constraintStart_toStartOf="@id/catImageOne"
        app:layout_constraintTop_toTopOf="parent" />

    <!-- 할인 가격 -->
    <TextView
        android:id="@+id/salePrice"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="117dp"
        android:layout_marginTop="188dp"
        android:text="14,400원"
        android:textSize="12sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="@id/catImageOne"
        app:layout_constraintTop_toTopOf="parent" />

    <!-- 주문 상품 아래수평선 -->
    <View
        android:id="@+id/thirdHorizon"
        android:layout_width="wrap_content"
        android:layout_height="5dp"
        android:layout_marginTop="249dp"
        android:background="#F5F6F7"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="MissingConstraints" />

    <!-- 사유 -->
    <TextView
        android:id="@+id/content"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginTop="274dp"
        android:text="사유"
        android:textColor="#33363F"
        android:textSize="12sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <!-- 입력창 -->
    <ImageView
        android:id="@+id/enterBoxFour"
        android:layout_width="320dp"
        android:layout_height="85dp"
        android:src="@drawable/ic_profile_administration_box"
        android:layout_marginTop="304dp"
        android:layout_marginStart="20dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>

    <!-- 입력창 안 내용 -->
    <TextView
        android:id="@+id/contentInformation"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="교환 사유 내용을 입력해 주세요"
        android:textSize="11sp"
        android:textColor="#565C65"
        android:layout_marginStart="15dp"
        android:layout_marginTop="10dp"
        app:layout_constraintStart_toStartOf="@id/enterBoxFour"
        app:layout_constraintTop_toTopOf="@id/enterBoxFour"/>
    <!-- 구매하기 하얀 사각형 배경 -->
    <ImageView
        android:id="@+id/buyFixBar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/bar_buy_fix"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <!-- 구매하기 버튼 -->
    <ImageView
        android:id="@+id/buyFixButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_accept_button"
        android:layout_marginBottom="10dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>



</androidx.constraintlayout.widget.ConstraintLayout>