<?xml version="1.0" encoding="utf-8"?>
<shape xmlns:android="http://schemas.android.com/apk/res/android"
    android:shape="rectangle">

    <!-- 사각형의 배경색 -->
    <solid android:color="#F59701"/>

    <!-- 사각형의 크기 (모서리 둥글게 하기) -->
    <corners android:radius="15dp"/> <!-- 모서리 각진 상태 -->

    <!-- 사각형의 내부 패딩 설정 (선택 사항) -->
    <padding
        android:left="10dp"
        android:top="10dp"
        android:right="10dp"
        android:bottom="10dp"/>
</shape>
